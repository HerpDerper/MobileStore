<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_product_list"
        android:name="com.example.mobilestore.Fragments.ProductListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_product_list" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.mobilestore.Fragments.CartFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mobilestore.Fragments.HomeFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_data_admin"
        android:name="com.example.mobilestore.Fragments.DataAdminFragment"
        android:label="@string/title_data"
        tools:layout="@layout/fragment_data_admin" />

    <fragment
        android:id="@+id/navigation_data_seller"
        android:name="com.example.mobilestore.Fragments.DataSellerFragment"
        android:label="@string/title_data"
        tools:layout="@layout/fragment_data_seller" />

</navigation>