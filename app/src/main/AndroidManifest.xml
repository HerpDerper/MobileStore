            android:name=".Activities.BuyingActivity"
            android:exported="true"
            android:label="Покупка товара"/>
        <activity
            android:name=".Activities.MainSellerActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.UpdateUserActivity"
            android:exported="true"
            android:label="Обновить роль"/>
        <activity
            android:name=".Activities.AddUpdateManufacturerActivity"
            android:exported="true"
            android:label="Производитель"/>
        <activity
            android:name=".Activities.AddUpdateCategoryActivity"
            android:exported="true"
            android:label="Категория"/>
        <activity
            android:name=".Activities.AddUpdateProductActivity"
            android:exported="true"
