<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilestore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileStore">
        <activity
            android:name=".ChangeInformationActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddCommentActivity"
            android:exported="true"
            android:parentActivityName=".ProductInfoActivity" />
        <activity
            android:name=".ProductInfoActivity"
            android:exported="true" />
        <activity
            android:name=".LogInActivity"
            android:exported="true"
            android:label="Вход" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:label="Регистрация"
            android:parentActivityName=".LogInActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>